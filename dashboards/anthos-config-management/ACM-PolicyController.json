{
  "category": "CUSTOM",
  "displayName": "Policy Controller",
  "mosaicLayout": {
    "columns": 12,
    "tiles": [
      {
        "height": 4,
        "widget": {
          "title": "Validation Request Duration",
          "xyChart": {
            "chartOptions": {
              "mode": "COLOR"
            },
            "dataSets": [
              {
                "minAlignmentPeriod": "60s",
                "plotType": "LINE",
                "targetAxis": "Y1",
                "timeSeriesQuery": {
                  "apiSource": "DEFAULT_CLOUD",
                  "timeSeriesFilter": {
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "crossSeriesReducer": "REDUCE_PERCENTILE_50",
                      "perSeriesAligner": "ALIGN_DELTA"
                    },
                    "filter": "metric.type=\"custom.googleapis.com/opencensus/gatekeeper/validation_request_duration_seconds\" resource.type=\"k8s_container\""
                  }
                }
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "scale": "LINEAR"
            }
          }
        },
        "width": 6,
        "xPos": 6,
        "yPos": 4
      },
      {
        "height": 2,
        "widget": {
          "scorecard": {
            "sparkChartView": {
              "sparkChartType": "SPARK_LINE"
            },
            "timeSeriesQuery": {
              "apiSource": "DEFAULT_CLOUD",
              "timeSeriesFilter": {
                "aggregation": {
                  "alignmentPeriod": "60s",
                  "crossSeriesReducer": "REDUCE_MAX",
                  "perSeriesAligner": "ALIGN_MEAN"
                },
                "filter": "metric.type=\"custom.googleapis.com/opencensus/gatekeeper/constraint_templates\" resource.type=\"k8s_container\" metric.label.\"status\"=\"active\""
              }
            }
          },
          "title": "Constraint Templates"
        },
        "width": 3,
        "xPos": 0,
        "yPos": 0
      },
      {
        "height": 2,
        "widget": {
          "scorecard": {
            "sparkChartView": {
              "sparkChartType": "SPARK_LINE"
            },
            "thresholds": [
              {
                "color": "RED",
                "direction": "ABOVE",
                "value": 0
              },
              {
                "color": "YELLOW",
                "direction": "ABOVE",
                "value": 0
              }
            ],
            "timeSeriesQuery": {
              "apiSource": "DEFAULT_CLOUD",
              "timeSeriesFilter": {
                "aggregation": {
                  "alignmentPeriod": "60s",
                  "crossSeriesReducer": "REDUCE_MAX",
                  "perSeriesAligner": "ALIGN_MAX"
                },
                "filter": "metric.type=\"custom.googleapis.com/opencensus/gatekeeper/violations\" resource.type=\"k8s_container\" metric.label.\"enforcement_action\"=\"deny\""
              }
            }
          },
          "title": "Policy Violations (Deny)"
        },
        "width": 3,
        "xPos": 3,
        "yPos": 0
      },
      {
        "height": 4,
        "widget": {
          "title": "Validation Requests Rate",
          "xyChart": {
            "chartOptions": {
              "mode": "COLOR"
            },
            "dataSets": [
              {
                "minAlignmentPeriod": "60s",
                "plotType": "LINE",
                "targetAxis": "Y1",
                "timeSeriesQuery": {
                  "apiSource": "DEFAULT_CLOUD",
                  "timeSeriesFilter": {
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "crossSeriesReducer": "REDUCE_NONE",
                      "perSeriesAligner": "ALIGN_RATE"
                    },
                    "filter": "metric.type=\"custom.googleapis.com/opencensus/gatekeeper/validation_request_count\" resource.type=\"k8s_container\"",
                    "secondaryAggregation": {
                      "alignmentPeriod": "60s",
                      "crossSeriesReducer": "REDUCE_NONE",
                      "perSeriesAligner": "ALIGN_MEAN"
                    }
                  }
                }
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "scale": "LINEAR"
            }
          }
        },
        "width": 6,
        "xPos": 6,
        "yPos": 0
      },
      {
        "height": 4,
        "widget": {
          "title": "Audit Duration Seconds",
          "xyChart": {
            "chartOptions": {
              "mode": "COLOR"
            },
            "dataSets": [
              {
                "minAlignmentPeriod": "60s",
                "plotType": "LINE",
                "targetAxis": "Y1",
                "timeSeriesQuery": {
                  "apiSource": "DEFAULT_CLOUD",
                  "timeSeriesFilter": {
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "crossSeriesReducer": "REDUCE_PERCENTILE_50",
                      "perSeriesAligner": "ALIGN_DELTA"
                    },
                    "filter": "metric.type=\"custom.googleapis.com/opencensus/gatekeeper/audit_duration_seconds\" resource.type=\"k8s_container\""
                  }
                }
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "scale": "LINEAR"
            }
          }
        },
        "width": 6,
        "xPos": 0,
        "yPos": 4
      },
      {
        "height": 2,
        "widget": {
          "scorecard": {
            "sparkChartView": {
              "sparkChartType": "SPARK_LINE"
            },
            "thresholds": [
              {
                "color": "YELLOW",
                "direction": "ABOVE",
                "value": 0
              }
            ],
            "timeSeriesQuery": {
              "apiSource": "DEFAULT_CLOUD",
              "timeSeriesFilter": {
                "aggregation": {
                  "alignmentPeriod": "60s",
                  "crossSeriesReducer": "REDUCE_MEAN",
                  "perSeriesAligner": "ALIGN_MEAN"
                },
                "filter": "metric.type=\"custom.googleapis.com/opencensus/gatekeeper/violations\" resource.type=\"k8s_container\" metric.label.\"enforcement_action\"=\"dryrun\""
              }
            }
          },
          "title": "Policy Violations (Dry Run)"
        },
        "width": 3,
        "xPos": 3,
        "yPos": 2
      },
      {
        "height": 2,
        "widget": {
          "scorecard": {
            "sparkChartView": {
              "sparkChartType": "SPARK_LINE"
            },
            "thresholds": [
              {
                "color": "YELLOW",
                "direction": "ABOVE",
                "value": 0
              }
            ],
            "timeSeriesQuery": {
              "apiSource": "DEFAULT_CLOUD",
              "timeSeriesFilter": {
                "aggregation": {
                  "alignmentPeriod": "60s",
                  "crossSeriesReducer": "REDUCE_MEAN",
                  "perSeriesAligner": "ALIGN_MEAN"
                },
                "filter": "metric.type=\"custom.googleapis.com/opencensus/gatekeeper/violations\" resource.type=\"k8s_container\" metric.label.\"enforcement_action\"=\"warn\""
              }
            }
          },
          "title": "Policy Violations (Warning)"
        },
        "width": 3,
        "xPos": 0,
        "yPos": 2
      }
    ]
  }
}