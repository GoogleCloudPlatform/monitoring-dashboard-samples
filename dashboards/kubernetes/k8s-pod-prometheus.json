{
  "displayName": "Kubernetes Pod Prometheus Overview",
  "dashboardFilters": [
    {
      "filterType": "RESOURCE_LABEL",
      "labelKey": "cluster",
      "templateVariable": "Cluster"
    },
    {
      "filterType": "RESOURCE_LABEL",
      "labelKey": "location",
      "templateVariable": "Location"
    },
    {
      "filterType": "RESOURCE_LABEL",
      "labelKey": "namespace",
      "templateVariable": "Namespace"
    }
  ],
  "mosaicLayout": {
    "columns": 48,
    "tiles": [
      {
        "width": 8,
        "height": 8,
        "widget": {
          "title": "Scheduled Pods",
          "scorecard": {
            "blankView": {},
            "thresholds": [],
            "timeSeriesQuery": {
              "prometheusQuery": "sum(kube_pod_status_scheduled{condition=\"true\",${Cluster},${Location},${Namespace}})",
              "unitOverride": ""
            }
          }
        }
      },
      {
        "xPos": 16,
        "width": 8,
        "height": 8,
        "widget": {
          "title": "Pending Pods",
          "scorecard": {
            "blankView": {},
            "thresholds": [
              {
                "color": "RED",
                "direction": "ABOVE",
                "label": "",
                "value": 50
              },
              {
                "color": "YELLOW",
                "direction": "ABOVE",
                "label": "",
                "value": 10
              }
            ],
            "timeSeriesQuery": {
              "prometheusQuery": "sum(kube_pod_status_phase{phase=\"Pending\",${Cluster},${Location},${Namespace}})",
              "unitOverride": ""
            }
          }
        }
      },
      {
        "xPos": 40,
        "width": 8,
        "height": 8,
        "widget": {
          "title": "Failed Pods",
          "scorecard": {
            "blankView": {},
            "thresholds": [],
            "timeSeriesQuery": {
              "prometheusQuery": "sum(kube_pod_status_phase{phase=\"Failed\",${Cluster},${Location},${Namespace}})",
              "unitOverride": ""
            }
          }
        }
      },
      {
        "yPos": 32,
        "width": 24,
        "height": 16,
        "widget": {
          "title": "Pod CPU Usage",
          "xyChart": {
            "chartOptions": {
              "mode": "COLOR"
            },
            "dataSets": [
              {
                "breakdowns": [],
                "dimensions": [],
                "measures": [],
                "plotType": "LINE",
                "targetAxis": "Y1",
                "timeSeriesQuery": {
                  "prometheusQuery": "sum(rate(container_cpu_usage_seconds_total{container!~\"POD|\",${Cluster},${Location},${Namespace}}[${__interval}])) by (pod)\n",
                  "unitOverride": ""
                }
              }
            ],
            "thresholds": [],
            "timeshiftDuration": "0s",
            "yAxis": {
              "label": "y1Axis",
              "scale": "LINEAR"
            }
          }
        }
      },
      {
        "yPos": 48,
        "width": 24,
        "height": 16,
        "widget": {
          "title": "Pod Memory Usage",
          "xyChart": {
            "chartOptions": {
              "mode": "COLOR"
            },
            "dataSets": [
              {
                "breakdowns": [],
