{
  "category": "CUSTOM",
  "displayName": "Kubernetes Pod Prometheus Overview",
  "mosaicLayout": {
    "columns": 12,
    "tiles": [
      {
        "height": 2,
        "widget": {
          "scorecard": {
            "blankView": {},
            "timeSeriesQuery": {
              "prometheusQuery": "sum(kube_pod_status_scheduled{condition=\"true\"})"
            }
          },
          "title": "Scheduled Pods"
        },
        "width": 2,
        "xPos": 0,
        "yPos": 0
      },
      {
        "height": 2,
        "widget": {
          "scorecard": {
            "blankView": {},
            "thresholds": [
              {
                "color": "RED",
                "direction": "ABOVE",
                "label": "",
                "value": 50
              },
              {
                "color": "YELLOW",
                "direction": "ABOVE",
                "label": "",
                "value": 10
              }
            ],
            "timeSeriesQuery": {
              "prometheusQuery": "sum(kube_pod_status_phase{phase=\"Pending\"})"
            }
          },
          "title": "Pending Pods"
        },
        "width": 2,
        "xPos": 4,
        "yPos": 0
      },
      {
        "height": 2,
        "widget": {
          "scorecard": {
            "sparkChartView": {
              "sparkChartType": "SPARK_LINE"
            },
            "thresholds": [
              {
                "color": "YELLOW",
                "direction": "ABOVE",
                "label": "",
                "value": 0
              }
            ],
            "timeSeriesQuery": {
              "prometheusQuery": "sum(kube_pod_status_phase{phase=\"Failed\"})"
            }
          },
          "title": "Failed Pods"
        },
        "width": 2,
        "xPos": 10,
        "yPos": 0
      },
      {
        "height": 4,
        "widget": {
          "title": "Pod CPU Usage",
          "xyChart": {
            "chartOptions": {
              "mode": "COLOR"
            },
            "dataSets": [
              {
                "plotType": "LINE",
                "targetAxis": "Y1",
                "timeSeriesQuery": {
                  "prometheusQuery": "sum(rate(container_cpu_usage_seconds_total{container!~\"POD|\"}[1m])) by (pod)\n"
                }
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "scale": "LINEAR"
            }
          }
        },
        "width": 6,
        "xPos": 0,
        "yPos": 8
      },
      {
        "height": 4,
        "widget": {
          "title": "Pod Memory Usage",
