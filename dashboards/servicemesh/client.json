{
  "displayName": "Istio Request/Response KPIs",
  "mosaicLayout": {
    "columns": 12,
    "tiles": [
      {
        "height": 4,
        "widget": {
          "title": "Client Request Bytes [95TH PERCENTILE]",
          "xyChart": {
            "chartOptions": {
              "mode": "COLOR"
            },
            "dataSets": [
              {
                "minAlignmentPeriod": "60s",
                "plotType": "STACKED_BAR",
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "aggregation": {
                      "perSeriesAligner": "ALIGN_PERCENTILE_95"
                    },
                    "filter": "metric.type=\"istio.io/service/client/request_bytes\"",
                    "secondaryAggregation": {}
                  }
                }
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "label": "y1Axis",
              "scale": "LINEAR"
            }
          }
        },
        "width": 4,
        "xPos": 8,
        "yPos": 2
      },
      {
        "height": 4,
        "widget": {
          "title": "Client Request Count [MEAN]",
          "xyChart": {
            "chartOptions": {
              "mode": "COLOR"
            },
            "dataSets": [
              {
                "minAlignmentPeriod": "60s",
                "plotType": "STACKED_AREA",
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "aggregation": {
                      "perSeriesAligner": "ALIGN_RATE"
                    },
                    "filter": "metric.type=\"istio.io/service/client/request_count\"",
                    "secondaryAggregation": {
                      "perSeriesAligner": "ALIGN_MEAN"
                    }
                  }
                }
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "label": "y1Axis",
              "scale": "LINEAR"
            }
          }
        },
        "width": 4,
        "xPos": 8,
        "yPos": 6
      },
      {
        "height": 2,
        "widget": {
          "scorecard": {
            "gaugeView": {
              "upperBound": 58
            },
            "timeSeriesQuery": {
              "timeSeriesFilter": {
                "aggregation": {
                  "crossSeriesReducer": "REDUCE_PERCENTILE_95",
                  "perSeriesAligner": "ALIGN_DELTA"
                },
                "filter": "metric.type=\"istio.io/service/server/response_latencies\""
              }
            }
          },
          "title": "Server Response Latencies [95TH PERCENTILE]"
        },
        "width": 4,
        "xPos": 8
      },
      {
        "height": 10,
        "widget": {
          "title": "Client Roundtrip Latencies [SUM]",
          "xyChart": {
            "chartOptions": {
              "mode": "COLOR"
            },
            "dataSets": [
              {
                "minAlignmentPeriod": "86400s",
                "plotType": "HEATMAP",
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "aggregation": {
                      "crossSeriesReducer": "REDUCE_SUM",
                      "perSeriesAligner": "ALIGN_DELTA"
                    },
                    "filter": "metric.type=\"istio.io/service/client/roundtrip_latencies\"",
                    "secondaryAggregation": {}
                  }
                }
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "label": "y1Axis",
              "scale": "LINEAR"
            }
          }
        },
        "width": 8
      }
    ]
  }
}