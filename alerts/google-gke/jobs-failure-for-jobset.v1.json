{
    "displayName": "Jobs failure (JobSet: ${JOBSET_NAME})",
    "documentation": {
      "content": "[View JobSet details](https://console.cloud.google.com/kubernetes/aiml/deployments/jobset/${metric_or_resource.label.project_id}/${CLUSTER_KIND}/${metric_or_resource.label.location}/${metric_or_resource.label.cluster_name}/${metric_or_resource.label.namespace_name}/${JOBSET_NAME}/observability?project=${metric_or_resource.label.project_id}).",
      "mimeType": "text/markdown"
    },
    "userLabels": {},
    "conditions": [
      {
        "displayName": "Jobs failure for: ${JOBSET_NAME}",
        "conditionThreshold": {
          "aggregations": [
            {
              "alignmentPeriod": "60s",
              "perSeriesAligner": "ALIGN_MEAN",
              "crossSeriesReducer": "REDUCE_NONE"
            }
          ],
          "comparison": "COMPARISON_GT",
          "duration": "0s",
          "filter": "resource.type = \"prometheus_target\" AND metric.type = \"prometheus.googleapis.com/kube_jobset_failed_replicas/gauge\" AND resource.labels.project_id=\"${metric_or_resource.label.project_id}\" AND resource.labels.cluster=\"${metric_or_resource.label.cluster_name}\" AND resource.labels.location=\"${metric_or_resource.label.location}\" AND resource.labels.namespace=\"${metric_or_resource.label.namespace_name}\" AND metric.labels.jobset_name=\"${JOBSET_NAME}\"",
          "thresholdValue": 1,
          "trigger": {
            "count": 1
          }
        }
      }
    ],
    "alertStrategy": {
      "autoClose": "604800s"
    },
    "combiner": "OR",
    "enabled": true
}
